<% layout('layouts/boilerplate') %>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <div class="col">
    <div class="card">
      <img
        src="https://images.unsplash.com/photo-1473445730015-841f29a9490b?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80"
        class="card-img-top"
        alt="semi-truck"
      />
      <div class="card-body">
        <h5 class="card-title">Agregar viaje</h5>
        <p class="card-text">
          Entra aqui para realizar el registro de un nuevo viaje.
        </p>
        <a href="/viajes/nuevo" class="btn btn-primary">Agregar</a>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card">
      <img
        src="https://images.unsplash.com/photo-1614124760016-5fe39bdf27db?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1651&q=80"
        class="card-img-top"
        alt="semi-truck"
      />
      <div class="card-body">
        <h5 class="card-title">Ver viajes</h5>
        <p class="card-text">Entra aqui para ver los viajes que desee ver.</p>
        <a href="/viajes/buscar" class="btn btn-primary">Ver</a>
      </div>
    </div>
  </div>
</div>
