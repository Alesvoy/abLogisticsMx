<% layout('layouts/boilerplate') %>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <div class="col">
    <div class="card">
      <img
        src="https://images.unsplash.com/photo-1492563361076-895af8cc7c43?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80"
        class="card-img-top"
        alt="drivers"
      />
      <div class="card-body">
        <h5 class="card-title">Agregar operador</h5>
        <p class="card-text">Entra aqui para agregar a un nuevo operador.</p>
        <a href="/operadores/nuevo" class="btn btn-primary">Agregar</a>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card">
      <img
        src="https://images.unsplash.com/photo-1564593606425-53fbf6dc3eb1?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80"
        class="card-img-top"
        alt="bus"
      />
      <div class="card-body">
        <h5 class="card-title">Ver operadores</h5>
        <p class="card-text">Entra aqui para ver los operadores activos.</p>
        <a href="/operadores/buscar" class="btn btn-primary">Ver</a>
      </div>
    </div>
  </div>
</div>
