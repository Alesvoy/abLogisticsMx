<% layout('layouts/boilerplate') %>

<form action="/operadores/buscar" class="mb-2">
  <div class="row">
    <div class="col">
      <div class="form-group">
        <label for="division">Division</label>
        <select name="division" id="division" class="form-control">
          <option value="CCG">CCG</option>
          <option value="MCG">MCG</option>
        </select>
      </div>
    </div>
    <div class="col">
      <button type="submit" class="btn btn-outline-primary mt-4">Buscar</button>
    </div>
  </div>
</form>

<div class="row">
  <% for(let operador of operadores) { %>
  <div class="col-sm-6">
    <div class="card mb-2">
      <div class="card-body">
        <h5 class="card-title"><%= operador.nombre %></h5>
        <p class="card-text">Unidad: <%= operador.unidad %></p>
        <p class="card-text">Division: <%= operador.division %></p>
        <a href="/operadores/<%= operador._id %> " class="btn btn-primary"
          >Editar</a
        >
      </div>
    </div>
  </div>
  <% } %>
</div>

<a href="/operadores" class="btn btn-primary mb-2">Regresar al menu</a>
